<div class="notice-show">
	<p id="notice"><%= notice %></p>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-6">
				<%= image_tag(@product.image_url, class: "img-responsive") %>
			</div>
			
		<div class="col-md-6">
        <p class="name-show"><strong>Name:</strong>
        <%= @product.name %>
        </p>

        <p class="description-show"><strong>Description:</strong>
        <%= @product.description %>
        </p>

        <p class="color-show"><strong>Colour:</strong>
        <%= @product.colour %>
        </p>

        <p class="price-show"><strong>Price:</strong>
        <%= @product.price %>
        </p> 

         <p class="rating-show">Rating:
        <br><%= @product.highest_rating_comment %>  
        </p>

        <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
        <%= render 'new_comment' %>
        <%= render 'comments'   %>
        <p class="back-edit-show">
            
        <%= link_to 'Edit', edit_product_path(@product) %><span>
        <%= link_to 'Back', products_path %></span>
        </p>
      </div>
    </div>
  </div>



